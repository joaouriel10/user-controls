{
  "compilerOptions": {
    "target": "es5",   
    "module": "CommonJS",                      
    "outDir": "./dist",   
    "rootDir": "./src",                     
    "strict": true,                           
    "strictPropertyInitialization": false,  
    "baseUrl": "./src",                       
    "paths": {
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"]
    },                    
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,                       
    "forceConsistentCasingInFileNames": true  
  }
}
